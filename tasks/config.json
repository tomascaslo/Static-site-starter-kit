{
	"assets": {
		"src": "src/assets/**/*",
		"dest": "."
	},
	"buildDir": "dist",
	"handlebars": {
		"context": "src/templates/context.js",
		"src": ["src/templates/views/**/*.hbs"],
		"partials": "src/templates/partials",
	    "viewsDir": "src/templates/views/",
		"dest": "."
	},
	"images": {
		"src": "src/images/**",
		"dest": "images"
	},
	"js": {
		"src": [
				"src/js/**/*.js"
		],
		"name": "all.min.js",
		"dest": "js"
	},
	"scss": {
		"includePaths": ["./src/scss"],
		"lint": "src/scss/**/*.scss",
		"src": "src/scss/main.scss",
		"name": "all.min.css",
		"dest": "css"
	}
}
